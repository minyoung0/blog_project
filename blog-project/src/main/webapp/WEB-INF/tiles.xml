<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="layout-tiles"
		template="/WEB-INF/jsp/egovframework/views/main/tilesLayout.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/egovframework/views/main/mainHeader.jsp"></put-attribute>
	<!-- 	<put-attribute name="menu" value="/WEB-INF/jsp/egovframework/views/main/menu.jsp"></put-attribute> -->
		<put-attribute name="body" value="/WEB-INF/jsp/egovframework/views/main/mainBody.jsp"></put-attribute>
	</definition>

	<definition name="tiles/*/*" extends="layout-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/egovframework/views/{1}/{2}.jsp"></put-attribute>
	</definition>
	
	<definition name="mypage-layout" template="/WEB-INF/jsp/egovframework/views/blog/myPageLayout.jsp">
	    <put-attribute name="header" value="/WEB-INF/jsp/egovframework/views/main/mainHeader.jsp"/>
	    <put-attribute name="sidebar" value="/WEB-INF/jsp/egovframework/views/blog/myPageSidebar.jsp"/>
	    <put-attribute name="content" value="/WEB-INF/jsp/egovframework/views/blog/myPageContent.jsp"/>
	</definition>

	
	  <!-- 마이페이지 내부 페이지들도 적용 -->
    <definition name="blogTiles/*/*" extends="mypage-layout">
        <put-attribute name="content" value="/WEB-INF/jsp/egovframework/views/blog/{1}/{2}.jsp"/>
    </definition>
	
	
</tiles-definitions>